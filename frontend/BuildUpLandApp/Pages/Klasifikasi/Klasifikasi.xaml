<Page x:Class="BuildUpLandApp.Pages.Klasifikasi.Klasifikasi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildUpLandApp.Pages.Klasifikasi"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Klasifikasi Lahan Terbangun"
      Background="#F0F4F8">

    <Page.Resources>
        <!-- Style Tombol Umum -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Color="#A0AEC0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2B6CB0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2C5282"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#A0AEC0"/>
                                <Setter Property="Foreground" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style Tombol Browse (...) -->
        <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Content" Value="..."/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <!-- Style TextBlock Input Path -->
        <Style x:Key="InputPathTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#4A5568"/>
        </Style>
        <!-- Style ComboBox -->
        <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!-- Style untuk Border Section -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <!-- Style untuk Judul Section -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <!-- Style untuk Teks Deskripsi -->
        <Style x:Key="DescriptionTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tombol Kembali -->
        <Button Content="←" Grid.Row="0"
                BorderThickness="0" Background="Transparent" Foreground="#4A5568"
                Width="40" Height="30" FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                Click="Back_Click" ToolTip="Kembali"/>

        <!-- Judul Halaman -->
        <TextBlock Grid.Row="0" Text="Klasifikasi Lahan Terbangun"
                   FontSize="24" FontWeight="Bold" Foreground="#1A202C"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,10"/>

        <!-- Konten Utama dengan Tabs -->
        <TabControl Grid.Row="1" Margin="20" Background="White" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#4A5568"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}" Margin="0,0,5,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#4299E1"/>
                                        <Setter Property="Foreground" Value="#2B6CB0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A0AEC0"/>
                                        <Setter Property="Foreground" Value="#2D3748"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#2D3748"/>
                </Style>
            </TabControl.Resources>

            <!-- TAB 1: PELATIHAN MODEL -->
            <TabItem Header="Pelatihan Model">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30">
                        <Border x:Name="RegresiLogistikPanel" Background="#F7FAFC" BorderBrush="#E2E8F0" BorderThickness="1" Padding="20" Margin="0" CornerRadius="8" Visibility="Visible">
                            <StackPanel>
                                <TextBlock Text="Pelatihan Regresi Logistik" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="Langkah 1: Siapkan Data (Potong Citra)" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#4A5568">
                                     Pilih folder citra (berisi file .jp2) dan file shapefile (.shp)
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock x:Name="LatihFolderCitraText" Style="{StaticResource InputPathTextBlockStyle}" Width="400" Text="Pilih folder citra..."/>
                                    <Button x:Name="BrowseCitraButton" Style="{StaticResource BrowseButtonStyle}" Click="SelectFolder_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock x:Name="LatihShapefileText" Style="{StaticResource InputPathTextBlockStyle}" Width="400" Text="Pilih shapefile..."/>
                                    <Button x:Name="BrowseShapefileButton" Style="{StaticResource BrowseButtonStyle}" Click="SelectShapefile_Click"/>
                                </StackPanel>
                                <Button x:Name="PotongCitraButton" Style="{StaticResource BaseButtonStyle}" Content="Mulai Proses Potong Citra" Width="250" HorizontalAlignment="Left" Click="PotongCitra_Click"/>

                                <Separator Margin="0,25,0,20"/>

                                <TextBlock Text="Langkah 2: Latih Model Regresi Logistik" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" Foreground="#4A5568">
                                    Tekan tombol ini untuk memulai pelatihan model menggunakan semua data yang telah diproses dan disimpan di database.
                                </TextBlock>
                                <Button x:Name="LatihModelLogRegButton" Style="{StaticResource BaseButtonStyle}" Content="Mulai Pelatihan Regresi Logistik" Width="250" HorizontalAlignment="Left" Click="LatihModelLogReg_Click"/>

                                <!-- Panel Hasil Evaluasi LogReg -->
                                <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Padding="15" Margin="0,20,0,0" CornerRadius="6">
                                    <StackPanel>
                                        <TextBlock Text="Hasil Evaluasi Terakhir" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                        <TextBlock x:Name="AkurasiText" Text="Akurasi&#x9;: -" Margin="0,2,0,2"/>
                                        <TextBlock x:Name="PresisiText" Text="Presisi&#x9;: -" Margin="0,2,0,2"/>
                                        <TextBlock x:Name="RecallText" Text="Recall&#x9;: -" Margin="0,2,0,2"/>
                                        <TextBlock x:Name="F1ScoreText" Text="F1-Score&#x9;: -" Margin="0,2,0,2"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: KLASIFIKASI CITRA -->
            <TabItem Header="Klasifikasi Citra">
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Kolom Input -->
                    <StackPanel Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Top">
                        <TextBlock Text="Pilih Data untuk Klasifikasi" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Opsi 1: Gunakan Citra Baru" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock x:Name="KlasifikasiCitraBaruText" Style="{StaticResource InputPathTextBlockStyle}" Width="250" Text="Pilih folder citra baru..."/>
                            <Button x:Name="BrowseCitraBaruButton" Style="{StaticResource BrowseButtonStyle}" Click="CitraBaru_Click"/>
                        </StackPanel>
                        <TextBlock Text="Pilih Kecamatan untuk Citra Baru:" Margin="0,0,0,5" Foreground="#4A5568"/>
                        <ComboBox x:Name="KecamatanCitraBaru" Style="{StaticResource BaseComboBoxStyle}" Width="300" HorizontalAlignment="Left" Margin="0,0,0,20"
                                  SelectionChanged="KecamatanCitraBaru_SelectionChanged">
                            <ComboBoxItem Content="Pilih kecamatan" IsSelected="True" IsEnabled="False"/>
                        </ComboBox>


                        <TextBlock Text="ATAU" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>

                        <TextBlock Text="Opsi 2: Gunakan Data Tersimpan" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="Pilih Kecamatan:" Margin="0,0,0,5" Foreground="#4A5568"/>
                        <ComboBox x:Name="KecamatanKlasifikasi" Style="{StaticResource BaseComboBoxStyle}" Width="300" HorizontalAlignment="Left" Margin="0,0,0,10"
                                   SelectionChanged="KecamatanKlasifikasi_SelectionChanged">
                            <ComboBoxItem Content="Pilih kecamatan" IsSelected="True" IsEnabled="False"/>
                        </ComboBox>
                        <TextBlock Text="Pilih Tanggal:" Margin="0,0,0,5" Foreground="#4A5568"/>
                        <ComboBox x:Name="TanggalKlasifikasi" Style="{StaticResource BaseComboBoxStyle}" Width="300" HorizontalAlignment="Left" Margin="0,0,0,20"
                                    SelectionChanged="TanggalKlasifikasi_SelectionChanged">
                            <ComboBoxItem Content="Pilih tanggal" IsSelected="True" IsEnabled="False"/>
                        </ComboBox>

                        <Button x:Name="KlasifikasiButton" Style="{StaticResource BaseButtonStyle}" Content="Mulai Klasifikasi" Width="200" HorizontalAlignment="Left" Click="Klasifikasi_Click"/>
                    </StackPanel>

                    <!-- Kolom Hasil -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Hasil Klasifikasi" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Gambar Hasil Klasifikasi -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Hasil Klasifikasi" TextAlignment="Center" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                    <Border x:Name="ClassifiedImageContainer" Width="300" Height="300" BorderBrush="#CBD5E0" BorderThickness="1" Background="#E2E8F0" CornerRadius="6">
                                        <TextBlock Text="Gambar hasil akan tampil di sini" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#718096"/>
                                    </Border>
                                    <CheckBox x:Name="ShowOverlayCheckbox"
                                              Content="Tampilkan Overlay"
                                              Margin="0,8,0,0"
                                              HorizontalAlignment="Center"
                                              IsChecked="False"
                                              Checked="ShowOverlayCheckbox_Checked"
                                              Unchecked="ShowOverlayCheckbox_Unchecked"/>
                                    <TextBlock x:Name="RasterKlasifikasi" TextAlignment="Center" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <!-- Legenda -->
                                    <StackPanel x:Name="LegendPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed">
                                        <Rectangle Fill="#8B0000" Width="15" Height="15" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Terbangun" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="11"/>
                                        <Rectangle Fill="#006400" Width="15" Height="15" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Non-Terbangun" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>

                                <!-- Gambar True Color -->
                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Citra Asli" TextAlignment="Center" Margin="0,0,0,5" FontWeight="SemiBold"/>
                                    <Border x:Name="TccImageContainer" Width="300" Height="300" BorderBrush="#CBD5E0" BorderThickness="1" Background="#E2E8F0" CornerRadius="6">
                                        <TextBlock Text="Gambar citra asli akan tampil di sini" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#718096"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Hasil Statistik -->
                            <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Padding="15" Margin="0,30,0,0" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="Statistik Luas Lahan" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                        <TextBlock Text="Luas Terbangun&#x9;&#x9;:" Width="150"/>
                                        <TextBlock x:Name="LuasTerbangunText" Text="-" FontWeight="SemiBold" Margin="5,0,0,0"/>
                                        <TextBlock Text=" km²" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                        <TextBlock Text="Luas Non-Terbangun&#x9;:" Width="150"/>
                                        <TextBlock x:Name="LuasNonTerbangunText" Text="-" FontWeight="SemiBold" Margin="5,0,0,0"/>
                                        <TextBlock Text=" km²" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
