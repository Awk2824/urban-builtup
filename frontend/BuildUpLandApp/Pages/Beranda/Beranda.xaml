<Page x:Class="TerraBuild.Pages.Beranda.Beranda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TerraBuild.Pages.Beranda"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Beranda"
      Background="Transparent">

    <Grid Margin="75" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="30" Margin="0,0,0,40" MaxWidth="650">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="20" Color="Black" Opacity="0.8"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Klasifikasi dan Prediksi Lahan Terbangun"
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"
                           Foreground="#1A202C"/>
                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Foreground="#4A5568" FontSize="14">
                    Aplikasi ini menggunakan citra satelit Sentinel-2 untuk mengklasifikasikan lahan terbangun
                    <LineBreak/>
                    dan memprediksi luas lahan terbangun di masa depan dengan menggunakan 
                    <LineBreak/>
                    model Regresi Logistik dan LSTM
                </TextBlock>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Style="{StaticResource MainButtonStyle}" 
                     Margin="0,0,20,0"
                     Click="Klasifikasi_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="&#xEC06;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Klasifikasi Lahan Terbangun" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                    <TextBlock Text="Identifikasi area terbangun" FontSize="11" Foreground="Gray" TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MainButtonStyle}" 
                     Margin="20,0,0,0"
                     Click="TimeSeries_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Prediksi Luas Lahan Terbangun" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                    <TextBlock Text="Perkirakan luas lahan terbangun di masa depan" FontSize="11" Foreground="Gray" TextAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Click="Panduan_Click">
                <TextBlock Text="Panduan Penggunaan" FontSize="14"/>
            </Button>
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Click="Tentang_Click">
                <TextBlock Text="Tentang Aplikasi" FontSize="14"/>
            </Button>
        </StackPanel>

    </Grid>

</Page>
