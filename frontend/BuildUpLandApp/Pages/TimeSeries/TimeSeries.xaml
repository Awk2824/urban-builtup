<Page x:Class="BuildUpLandApp.Pages.TimeSeries.TimeSeries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuildUpLandApp.Pages.TimeSeries"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Prediksi LSTM"
      Background="#F0F4F8">

    <Page.Resources>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Color="#A0AEC0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2B6CB0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2C5282"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#A0AEC0"/>
                                <Setter Property="Foreground" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style x:Key="DescriptionTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}" Margin="0,0,5,0">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4299E1"/>
                                <Setter Property="Foreground" Value="#2B6CB0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#A0AEC0"/>
                                <Setter Property="Foreground" Value="#2D3748"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="0,15,0,15"/>
            <Setter Property="Background" Value="#E2E8F0"/>
        </Style>
        <Style x:Key="HyperparameterDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tombol Kembali -->
        <Button Content="←" Grid.Row="0"
                BorderThickness="0" Background="Transparent" Foreground="#4A5568"
                Width="40" Height="30" FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                Click="Back_Click" ToolTip="Kembali"/>

        <!-- Judul Halaman -->
        <TextBlock Grid.Row="0" Text="Prediksi Luas Lahan Terbangun"
                   FontSize="24" FontWeight="Bold" Foreground="#1A202C"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,10"/>

        <!-- Konten Utama dengan Tabs -->
        <TabControl Grid.Row="1" Margin="20" Background="White" BorderThickness="0">

            <!-- TAB 1: PELATIHAN MODEL LSTM -->
            <TabItem Header="Pelatihan Model">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30">
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Pelatihan Model LSTM"/>
                                <TextBlock Style="{StaticResource DescriptionTextStyle}">
                                    Proses ini akan mengambil data deret waktu dari database dan melatih model LSTM menggunakan seluruh data deret waktu tersebut.
                                </TextBlock>

                                <Separator/>

                                <TextBlock Text="Konfigurasi Hyperparameter:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="Panjang Sekuens:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="SeqLengthTextBox" Text="5" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource HyperparameterDescriptionStyle}">Jumlah data historis yang dipakai prediksi. (Disarankan: 3-6)</TextBlock>

                                    <Label Grid.Row="0" Grid.Column="2" Content="Hidden Units:"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" x:Name="HiddenUnitsTextBox" Text="32" Margin="0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource HyperparameterDescriptionStyle}">Jumlah “neuron” di LSTM. (Disarankan: 12-64)</TextBlock>
                                    
                                    <Label Grid.Row="2" Grid.Column="0" Content="Jumlah Epoch:"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="EpochsTextBox" Text="200" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource HyperparameterDescriptionStyle}">Berapa kali model belajar dari seluruh data. (Disarankan: 100-200)</TextBlock>

                                    <Label Grid.Row="2" Grid.Column="2" Content="Learning Rate:"/>
                                    <TextBox Grid.Row="2" Grid.Column="3" x:Name="LearningRateTextBox" Text="0.005" Margin="0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="3" Style="{StaticResource HyperparameterDescriptionStyle}">Seberapa besar model menyesuaikan bobot tiap langkah. (Disarankan: 0.01-0.001)</TextBlock>

                                    <Label Grid.Row="4" Grid.Column="0" Content="Ukuran Batch:"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="BatchSizeTextBox" Text="2" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource HyperparameterDescriptionStyle}">Banyak data diproses sebelum bobot diperbarui. (Disarankan: 2-16)</TextBlock>

                                    <Label Grid.Row="4" Grid.Column="2" Content="Dropout Rate:"/>
                                    <TextBox Grid.Row="4" Grid.Column="3" x:Name="DropoutRateTextBox" Text="0.2" Margin="0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="3" Style="{StaticResource HyperparameterDescriptionStyle}">Peluang neuron dinonaktifkan sementara untuk mencegah overfitting. (Disarankan: 0.1-0.2)</TextBlock>

                                    <Label Grid.Row="6" Grid.Column="0" Content="Optimizer:"/>
                                    <ComboBox Grid.Row="6" Grid.Column="1" x:Name="OptimizerComboBox" Style="{StaticResource BaseComboBoxStyle}" Width="150" Padding="10,0" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Adam" IsSelected="True"/>
                                        <ComboBoxItem Content="RMSprop"/>
                                        <ComboBoxItem Content="SGD"/>
                                    </ComboBox>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Style="{StaticResource HyperparameterDescriptionStyle}">Algoritma yang digunakan untuk menyesuaikan bobot model.</TextBlock>
                                </Grid>

                                <Separator/>

                                <Button x:Name="LatihModelLSTMButton" Style="{StaticResource BaseButtonStyle}"
                                        Content="Mulai Pelatihan Model LSTM" Width="300" HorizontalAlignment="Left"
                                        Click="LatihModelLSTM_Click"/>

                                <!-- Panel Hasil Evaluasi LSTM -->
                                <Border Background="#F7FAFC" BorderBrush="#E2E8F0" BorderThickness="1" Padding="15" Margin="0,20,0,0" CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical" Margin="0,0,100,0">
                                            <TextBlock Text="Hasil Evaluasi Terakhir" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock x:Name="MaeText" Text="MAE&#x9;&#x9;: -" Margin="0,2,0,2"/>
                                            <TextBlock x:Name="MseText" Text="MSE&#x9;&#x9;: -" Margin="0,2,0,2"/>
                                            <TextBlock x:Name="RmseText" Text="RMSE&#x9;&#x9;: -" Margin="0,2,0,2"/>
                                            <TextBlock x:Name="MapeText" Text="MAPE&#x9;&#x9;: -" Margin="0,2,0,2"/>
                                            <TextBlock x:Name="R2Text" Text="R-Squared&#x9;: -" Margin="0,2,0,2"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <Border x:Name="R2GraphContainer" Height="400" Width="600" Background="#E2E8F0" Margin="0,10,0,0" CornerRadius="4">
                                                <TextBlock Text="Grafik R-Squared akan tampil di sini" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#718096"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: PREDIKSI LUAS LAHAN -->
            <TabItem Header="Prediksi Luas Lahan">
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Kolom Input -->
                        <ColumnDefinition Width="*"/>
                        <!-- Kolom Hasil -->
                    </Grid.ColumnDefinitions>

                    <!-- Kolom Input -->
                    <StackPanel Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Top" Width="500">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Prediksi Luas Lahan Terbangun"/>
                        <TextBlock Style="{StaticResource DescriptionTextStyle}">
                             Pilih kecamatan dan tahun target untuk memprediksi total luas lahan terbangun menggunakan model LSTM yang telah dilatih.
                        </TextBlock>

                        <Label Content="Pilih Kecamatan:" Margin="0,10,0,5"/>
                        <ComboBox x:Name="KecamatanPrediksi" Style="{StaticResource BaseComboBoxStyle}" Width="300" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <ComboBoxItem Content="Pilih kecamatan" IsSelected="True" IsEnabled="False"/>
                            <!-- Akan diisi dari C# -->
                        </ComboBox>

                        <Label Content="Pilih Tahun Target Prediksi:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TahunPrediksi" Style="{StaticResource BaseComboBoxStyle}" Width="300" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <ComboBoxItem Content="Pilih tahun" IsSelected="True" IsEnabled="False"/>
                            <!-- Akan diisi dari C# -->
                        </ComboBox>

                        <Button x:Name="PrediksiButton" Style="{StaticResource BaseButtonStyle}"
                                Content="Mulai Prediksi" Width="200" HorizontalAlignment="Left"
                                Click="Prediksi_Click"/>
                    </StackPanel>

                    <!-- Kolom Hasil -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Hasil Prediksi"/>

                            <!-- Hasil Prediksi -->
                            <Border Style="{StaticResource SectionBorderStyle}" Background="#F7FAFC">
                                <StackPanel>
                                    <TextBlock Text="Prediksi Luas Lahan Terbangun" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                        <Label Content="Kecamatan&#x9;:" Width="100"/>
                                        <TextBlock x:Name="KecamatanOutputText" Text="-" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                        <Label Content="Tahun Prediksi&#x9;:" Width="100"/>
                                        <TextBlock x:Name="TahunPrediksiText" Text="-" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,2">
                                        <Label Content="Estimasi Luas&#x9;:" Width="100"/>
                                        <TextBlock x:Name="LuasTerbangunOutputText" Text="-" FontWeight="Bold" FontSize="14" Foreground="#2B6CB0" Margin="0,3,0,0"/>
                                        <TextBlock Text=" km²" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Placeholder Grafik Prediksi -->
                            <Border Style="{StaticResource SectionBorderStyle}" Background="#F7FAFC">
                                <StackPanel>
                                    <TextBlock Text="Grafik Prediksi" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                    <Border x:Name="PredictionGraphContainer" Height="300" Background="#E2E8F0" CornerRadius="4">
                                        <TextBlock Text="Grafik akan tampil di sini" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#718096"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
